<h3><%= params[:category] %></h3>
<% if @category_recipes%>
  <ul>
    <% @category_recipes.each do |recipe_name|%>
      <li><a href="/<%= params[:category] %>/<%= recipe_name %>"><%= recipe_name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no recipes to display.</p>
<% end %>

